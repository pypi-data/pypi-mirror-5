<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="ityou.astream">
<body>
<metal:macro define-macro="astream-tmpl-macro">       

    <!--  ~~~~~~~~~~~~~~~~~~ activity-comment-tmpl ~~~~~~~~~~~~~~~~~~~~~~ -->       
    <div id="no-tal" tal:replace='structure string:

    <script id="activity-comment-tmpl" type="text/x-jquery-tmpl">

        <li id="$${hash}" class="comment jq-render">        
            <div class="comment-hide-button small"></div>
            <div class="comment-portrait">
                <a href="$${site_url}/author/$${user_id}"><img class="very-small-personal-portrait" src="$${portrait}" title="$${user_name}" alt="$${user_name}" /></a>
            </div>
            <div class="comment-wrapper">
                    <a href="#"><b>$${user_name}</b></a>                                
                    <span class="c-timestamp" id="$${timestamp}">$${timestr}</span><br />
                    <div style="white-space:pre; overflow-x:auto">$${comment}</div>  
            </div>
        </li>                               
    </script>

    '/> 
    <!--  ~~~~~~~~~~~~~~~~~~ /activity-comment-tmpl ~~~~~~~~~~~~~~~~~~~~~~ -->       

    <!-- ~~~~~~~~~~~~ activity-tmpl ~~~~~~~~~~~~~~~~~~~~~ -->       
    <div id="no-tal" tal:replace='structure string:

    <script id="activity-tmpl" type="text/x-jquery-tmpl">
       <li id="$${hash}" class="activity jq-render document_activity">
           <div class="activity-portrait">     
              <a href="$${site_url}/author/$${user_id}"><img class="small-personal-portrait" src="$${portrait}" title="$${user_name}" alt="$${user_name}" /></a>
           </div>
           <div class="activity-wrapper">
               <div class="activity-hide-button small" i18n:attributes="activity_hide"></div>
               <div class="activity-text">
                   <a class="user-name" href="$${site_url}/author/$${user_id}"><i>$${user_name}</i></a>                            
                   <span class="timestamp" id="$${timestamp}">$${timestr}</span><br />
                   <a class="user-message" href="$${content_url}">{{html message}}</a>
               </div>
               <!--  comments (TAL + AJAX) -->
               <ul class="comments">
               {{each comments}}
                   <li id="$${$$value.hash}" class="comment jq-render">
                       <div class="comment-hide-button small"></div>
                       <div class="comment-portrait">      
                          <a href="$${site_url}/author/$${user_id}"><img class="very-small-personal-portrait" src="$${$$value.portrait}" title="$${$$value.user_name}" alt="$${$$value.user_name}" /></a>
                       </div>
                       <div class="comment-wrapper">
                               <a class="user-name" href="$${site_url}/author/$${$$value.user_id}"><b>$${$$value.user_name}</b></a> 
                               <span class="c-timestamp" id="$${$$value.timestamp}">$${$$value.timestr}</span><br />
                               <div class="user-message" style="white-space:pre; overflow-x:auto">$${$$value.comment}</div>  
                       </div>  
                   </li>                               
               {{/each}}
               </ul>
               <!-- /comments -->
               <div class="activity-controls"> 
                   <button class="comment-input-button small" onClick="return false">comment</button>
                   <div  class="comment-input-field small"><textarea></textarea></div>
                   <button class="comment-save-button small" onClick="return false">save</button>
                   <button class="comment-all-button small" onClick="return false">view all</button>                               
               </div>
           </div>
           <div class="visualClear">&nbsp;</div>
       </li>
    </script>

    <script id="activity-comment-tmpl" type="text/x-jquery-tmpl">

            <li id="$${hash}" class="comment jq-render">
                <div class="comment-hide-button small"></div>
                <div class="comment-portrait">      
                  <a href="$${site_url}/author/$${user_id}"><img class="very-small-personal-portrait" src="$${portrait}" title="$${user_name}" alt="$${user_name}" /></a>
                </div>
                <div class="comment-wrapper">
                        <a class="user-name" href="$${site_url}/author/$${user_id}"><b>$${user_name}</b></a>                                
                        <span class="c-timestamp" id="$${timestamp}">$${timestr}</span><br />
                        <div style="white-space:pre; overflow-x:auto">$${comment}</div>  
                </div>
            </li>                               

    </script>

    '/> 
    <!--  ~~~~~~~~~~~~~~~~~~~~~ /activity-tmpl ~~~~~~~~~~~~~ -->      

</metal:macro>
</body>
</html>
