<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
	<!--(for ext, name, mimetype in data)-->
	<!-- @!name!@ -->
	<mime-type type="@!mimetype!@">
		<comment>@!name!@</comment>
		<glob pattern="*.@!ext!@"/>
		<icon>@!mimetype!@</icon>
	</mime-type>
	<!--(end)-->
</mime-info>
