#!/usr/bin/env python

import Tkinter
import imageresizer.gui
import imageresizer.cli

args =  imageresizer.cli.parse()
if args.cli:
    (source_directory, destination_directory) = args.cli
    imageresizer.cli.process(source_directory, destination_directory)
else:
    import imageresizer.gui
    ROOT = Tkinter.Tk()
    imageresizer.gui.ImageResizerApp(ROOT)
    ROOT.mainloop()
