<?xml version="1.0"?>
<object name="AuthoringContentFolder"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="producepublish" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">AuthoringContentFolder</property>
  <property name="description"
    i18n:translate="">Authoring Content Folder</property>
  <property name="content_meta_type">AuthoringContentFolder</property>
  <property name="content_icon">folder_icon.gif</property>
  <property name="product">zopyx.authoring</property>
  <property name="factory">addAuthoringContentFolder</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allow_discussion">False</property>
  <property name="default_view">base_view</property>
  <property name="allowed_content_types">
    <element value="AuthoringContentFolder" />
    <element value="Image" />
    <element value="AuthoringContentPage" />
    <element value="AuthoringContentAggregator" />
    <element value="Image" />
  </property>
  <property name="view_methods">
    <element value="base_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content" />
  </action>
  <action title="Word Import (DOCX)" action_id="import" category="object" condition_expr=""
    url_expr="string:${object_url}/@@import-office-document-form" visible="True">
    <permission value="Modify portal content" />
  </action>
  <action title="HTML Import from ZIP" action_id="import-html-zip" category="object" condition_expr=""
    url_expr="string:${object_url}/@@import_form" visible="True">
    <permission value="Modify portal content" />
  </action>
  <action title="Usage" action_id="usage" category="object" condition_expr=""
    url_expr="string:${object_url}/@@usage" visible="False">
    <permission value="View" />
  </action>
</object>
