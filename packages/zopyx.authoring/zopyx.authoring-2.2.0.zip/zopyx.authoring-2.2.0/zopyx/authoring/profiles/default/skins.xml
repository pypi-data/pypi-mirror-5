             meta_type="Filesystem Directory View"
             directory="zopyx.authoring:skins/zopyx_authoring"/>
     <object name="zopyx_linktool"
             meta_type="Filesystem Directory View"
             directory="zopyx.authoring:skins/zopyx_linktool"/>
