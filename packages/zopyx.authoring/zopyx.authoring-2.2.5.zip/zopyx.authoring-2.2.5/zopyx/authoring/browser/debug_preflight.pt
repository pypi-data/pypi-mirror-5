<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="producepublish">

    <metal:fill fill-slot="main">
        <h1 i18n:translate="label_debug_preflight">Preflight</h1>
        <div id="debug-preflight" tal:define="errors view/preflightResults">
            <div tal:condition="not: errors"
                 class="preflightOk"
                 i18n:translate="label_no_preflight_errors">No errors found</div>

            <div tal:condition="errors">
                <h2 i18n:translate="label_preflight_errors">Errors</h2>
                <ul>
                    <li class="preflightWarning" tal:repeat="error errors" tal:content="error" />
                </ul>
            </div>
        </div>
    </metal:fill>
</html>
