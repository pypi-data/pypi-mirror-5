<html metal:use-macro="context/main_template/macros/master">

    <metal:slot fill-slot="main">

        <div id="contentfolder-importform" i18n:domain="producepublish">

            <fieldset id="contentfolder-importform-fieldset">
                <legend i18n:translate="label_import_office_document">Import office document</legend>
                <form action="@@import-office-document" method="post" enctype="multipart/form-data" id="content-import-form">

                    <div class="form-row">
                        <label i18n:translate="label_file">File</label>
                        <input type="file" name="doc" value="" size="60" />
                    </div>
                    <div class="form-row">
                        <label>&nbsp;</label>
                        <select name="clear_options" size="1">
                            <option value="clear_all" selected i18n:translate="remove_existing_content_before_import">Remove existing content before import</option>
                            <option value="keep_images" i18n:translate="keep_images_remove_existing_content">Keep images, remove existing content</option>
                        </select>
                    </div>
                    <div class="form-row" id="archive">
                        <label for="do-archive" i18n:translate="label_archive_before_import">Archive before import</label>
                        <input type="checkbox" name="do_archive" value="1" id="do-archive" />
                    </div>
                    <div class="form-control">
                        <input class="context" type="submit" value="Upload" i18n:attributes="value label_upload" />
                    </div>
                </form>

            </fieldset>
        </div>
    </metal:slot>
</html>
