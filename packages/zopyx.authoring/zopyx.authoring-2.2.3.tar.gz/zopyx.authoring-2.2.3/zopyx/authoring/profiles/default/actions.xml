<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <object name="object_buttons" meta_type="CMF Action Category">
  <object name="sort_folder" meta_type="CMF Action">
   <property name="title">Sort alphabetically</property>
   <property name="description">Sort alphabetically</property>
   <property name="url_expr">string:${object/absolute_url}/@@sort_folder</property>
   <property name="link_target"></property>
   <property name="icon_expr"></property>
   <property
      name="available_expr">python: object.portal_interface.objectImplements(object, 'Products.ATContentTypes.interfaces.IATFolder')</property>
   <property name="permissions">
    <element value="Modify portal content"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
