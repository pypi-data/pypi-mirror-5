<html metal:use-macro="context/main_template/macros/master">
    <metal:slot fill-slot="main">
        <div id="authoringproject-cleanup-form" i18n:domain="producepublish">
            <fieldset id="authoringproject-cleanup-fieldset">
                <legend i18n:translate="label_cleanup_project">Cleanup authoring project</legend>
                <form action="@@cleanup-project" method="post">
                    <label i18n:translate="label_remove_drafts">Remove drafts</label>
                    <select name="drafts_older_than:int" size="1">
                        <option value="0" i18n:translate="all_drafts">all drafts</option>
                        <option value="7" i18n:translate="older_than_one_week"> drafts older than one week</option>
                        <option value="14" i18n:translate="older_than_two_weeks"> drafts older than two weeks</option>
                        <option value="28" i18n:translate="older_than_four_weeks"> drafts older than four weeks</option>
                    </select>
                    <br/>        
                    <br/>        
                    <input class="context" type="submit" value="Cleanup" i18n:attributes="value label_cleanup" />
                </form>
            </fieldset>
        </div>
    </metal:slot>
</html>
