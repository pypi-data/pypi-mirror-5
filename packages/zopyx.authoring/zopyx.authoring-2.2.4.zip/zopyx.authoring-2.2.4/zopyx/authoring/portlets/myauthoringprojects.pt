<tal:def define="projects view/myProjects">

    <dl tal:condition="projects"
        class="portlet portletMyAuthoringProjects"
        i18n:domain="producepublish">

        <dt class="portletHeader">
            <span class="portletTopLeft"></span>
            <span i18n:translate="label_my_projects">
               My projects
            </span>
            <span class="portletTopRight"></span>
        </dt>

        <dd class="portletItem odd">
            <ul>
                <li tal:repeat="project projects">
                    <a tal:attributes="href project/url" tal:content="project/title" />
                </li>
            </ul>
        </dd>

    </dl>
</tal:def>
