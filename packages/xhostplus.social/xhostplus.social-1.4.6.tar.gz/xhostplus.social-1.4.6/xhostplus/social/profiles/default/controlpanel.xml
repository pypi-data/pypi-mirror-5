<object
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n:domain="xhostplus.social"
    name="portal_controlpanel"
    meta_type="Plone Control Panel Tool">

    <configlet title="Social Network Configuration"
               action_id="xhostplus-social-configuration"
               appId="XhostplusSocialConfiguration"
               category="Products"
               url_expr="string:${portal_url}/@@xhostplus-social-configuration"
               icon_expr="string:${portal_url}/++resource++xhostplus.social.images/configuration_icon.png"
               visible="True"
               i18n:attributes="title"
               >
        <permission>Modify portal content</permission>
    </configlet>

</object>
