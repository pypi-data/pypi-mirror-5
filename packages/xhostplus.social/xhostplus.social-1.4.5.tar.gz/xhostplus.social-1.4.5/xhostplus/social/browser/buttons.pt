<span tal:omit-tag=""
      tal:condition="view/social_buttons_enabled">
    <tal:buttons condition="not:view/two_click_enabled">
        <div id="fb-root"></div>
        <div id="xhostplus-social-viewlet">
            <script type="text/javascript"
                    tal:content="structure view/import_script"></script>

            <div class="fb-like" data-send="false" data-width="250" data-show-faces="false" data-action="like" data-href=""
                 tal:condition="python:view.facebook_status == 'on'"
                 tal:attributes="data-href context/absolute_url"></div>
            <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-lang="" data-hashtags=""
               tal:condition="python:view.twitter_status == 'on'"
               tal:attributes="data-lang view/language;
                               data-hashtags view/twitter_hashtags"></a>
            <div class="g-plusone" data-size="medium" data-annotation="bubble"
                 tal:condition="python:view.googleplus_status == 'on'"></div>
            <script type="IN/Share" data-counter="right"
                    tal:condition="python:view.linkedin_status == 'on'"></script>
        </div>
    </tal:buttons>

    <tal:buttons condition="view/two_click_enabled">
            <script type="text/javascript"
                    tal:content="structure view/two_click_import_script"></script>
        <div id="socialshareprivacy"></div>
    </tal:buttons>
</span>
