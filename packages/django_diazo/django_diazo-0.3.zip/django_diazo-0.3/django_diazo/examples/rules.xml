<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Disable theme for Django Admin -->
    <notheme if-path="admin" />

    <!-- Enable theme -->
    <theme href="your_theme_folder_in_static/index.html" />

    <!-- Title of the page -->
    <replace theme="/html/head/title"
             content="/html/head/title" />

    <!-- Append link/script elements to head -->
    <append theme="/html/head"
            content="/html/head/link | /html/head/script" />

    <!-- Replace all body contents -->
    <replace theme="/html/body"
             content="/html/body" />

</rules>