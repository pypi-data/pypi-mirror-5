<html xmlns="http://www.w3.org/1999/xhtml" xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	xml:lang="en" lang="en" metal:use-macro="context/main_template/macros/master"
	i18n:domain="wasgehtengine.import">
	<body>
		<metal:main fill-slot="main">
			<metal:main define-macro="main">
				<h1 class="documentFirstHeading" i18n:translate="header_import">
					Import
				</h1>
				<p class="documentDescription" i18n:translate="description_recent_dam_report">
					Import venues or events
				</p>
				<form method="post"
					tal:attributes="action string:${context/absolute_url}/${view/__name__}">
					<!-- render a Cross-Site request forgery protection token -->
					<span tal:replace="structure context/@@authenticator/authenticator" />
					<div i18n:translate="import_export_code">
						<section id="venue-import">
							<h1>Venue import</h1>
							<label for="osm-import-configfile">OSM Import config file:</label>
							<input type="text" id="osm-import-configfile" name="osm-import-configfile" placeholder="/path/to/osm-import.xml" />
							<input type="submit" class="context" name="form.button.import-venues"
								value="Import venues" i18n:name="import_venues_button"
								i18n:attributes="value" />
						</section>

						<section id="event-import">
							<h1>Event import</h1>
							<label for="event-import-definitions-dir">Event Import definitions directory:</label>
							<input type="text" id="event-import-definitions-dir" name="event-import-definitions-dir" placeholder="/path/to/eventimport-definitions"/>

							<input type="submit" class="standalone" name="form.button.import-events"
								value="Import events" i18n:name="import_events_button"
								i18n:attributes="value" />
						</section>
					</div>
				</form>
			</metal:main>
		</metal:main>
	</body>
</html>
