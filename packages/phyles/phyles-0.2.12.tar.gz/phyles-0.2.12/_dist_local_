#! /bin/csh -f

############################################################
# Change these
############################################################
set codedir="${HOME}/Code"
set libdir="${HOME}/Code/python"
set bindir="${HOME}/bin"
set srcbin="src/bin"
set srcpkg="src/phyles"
set package="phyles"
set libfiles="__init__.py phylelib.py"
set binfiles=""
############################################################


############################################################
# No need to change things below here
############################################################

set pkgdir="${libdir}/${package}"
set distdir="${codedir}/${package}"

cd ${distdir}

svn status

rm -rf ${pkgdir}
mkdir ${pkgdir}

cd ${distdir}
cd ${srcpkg}
cp ${libfiles} ${pkgdir}

if ($binfiles != "") then
  cd ${distdir}
  cd ${srcbin}
  cp ${binfiles} ${bindir}
endif

echo Success.
