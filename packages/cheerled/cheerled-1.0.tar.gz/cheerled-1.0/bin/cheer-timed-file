import sys
import os
from cheerled import SlcDevice
import getopt

def usage():
    """Print the usage of the tool"""
    return """
Usage:

  %s [DEVICE] timer_id files start_time end_time [weekdays(default all)]

  timer_id   - Timer id an int to save this timer to
  files      - A list of files to display, (comma seperated)
  start_time - HH:MM time to start displaying these files
  end_time   - HH:MM time to stop displaying these files
  weekdays   - A list of weekdays to apply this timer, comma seperated)

""" % sys.argv[0]


def set_timer(device, inputs):
    """Sets messages to the device"""
    opts, args = getopt.getopt(inputs, '')
    if len(args) < 5:
        args.append('all')
    device.set_timer(args[0], args[2], args[3], args[1], args[4])


if len(sys.argv) < 3:
    print usage()
else:
    device = SlcDevice( sys.argv[1] )
    if device:
        set_timer(device, sys.argv[2:])


