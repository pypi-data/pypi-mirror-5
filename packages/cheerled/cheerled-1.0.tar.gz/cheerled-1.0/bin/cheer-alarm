import sys
import os
from cheerled import SlcDevice
import getopt

def usage():
    """Print the usage of the tool"""
    return """
Usage:

  %s [DEVICE] repeat delay hourly

  repeat - number of repeatitions of the alarm
  delay  - delay between each repeatition
  hourly - on/off of hourly alarm

""" % sys.argv[0]


def set_timer(device, inputs):
    """Sets messages to the device"""
    opts, args = getopt.getopt(inputs, '')
    #device.set_alarm(args[0], args[1])
    #device.set_hourly(args[2]=='on')
    sys.stderr.write("Alarm is broken, the windows app is also broken. sorry\n")


if len(sys.argv) < 3:
    print usage()
else:
    device = SlcDevice( sys.argv[1] )
    if device:
        set_timer(device, sys.argv[2:])


