import sys
import os
from cheerled import SlcDevice

def usage():
    """Print the usage of the tool"""
    return """
Usage:

  %s [DEVICE] Graphic

""" % sys.argv[0]


def set_image_messages(device, inputs):
    """Sets messages to the device"""
    set_file = False
    file = 1
    for input in inputs:
        if set_file:
            file = int(input)
            continue
        elif input == '-f':
            set_file = True
        else:
            device.graphic(input)
    device.send_message(file)


if len(sys.argv) < 3:
    print usage()
else:
    device = SlcDevice( sys.argv[1] )
    if device:
        set_image_messages(device, sys.argv[2:])


