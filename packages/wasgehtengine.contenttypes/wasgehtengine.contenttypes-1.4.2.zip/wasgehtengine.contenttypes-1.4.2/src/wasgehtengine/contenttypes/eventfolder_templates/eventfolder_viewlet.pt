<section id="eventfolder-viewlet" i18n:domain="wasgehtengine.contenttypes">

	<header>
		<h1>Parties, Konzerte und Nachtleben in Bonn</h1>
		<div class="date-nav">
			<div>
				<h2 tal:content="python:view.datestring()" />
			</div>
			<a id="time-previous" tal:attributes="href view/previous">Früher</a>
			<a id="time-next" tal:attributes="href view/next">Später</a>
		</div>
	</header>
	<ul id="eventsList" class="itemList">
		<li tal:repeat="event view/events">
			<article class="event hide-group">
				<header>
					<h2 class="event-title" tal:define="wtool here/portal_workflow; review_state python: wtool.getInfoFor(event, 'review_state')">
						<a tal:define="title python: unicode(event.title)"
							tal:attributes="href event/absolute_url; class python: 'note-status-private' if review_state == 'private' else ''" tal:content="python: title[:50] + (title[50:] and '...')" />
						<a tal:condition="python: event.Creator() == 'event-importer'"
							tal:define="navigation_root_url context/@@plone_portal_state/navigation_root_url;"
							tal:attributes="href string:$navigation_root_url/eventimportstatus"
							class="event-auto-imported" title="Dieses Event wurde automatisch importiert">
							<span>automatisch importiert</span>
						</a>
					</h2>
					<div class="event-metainfo hide-button-anchor">
						<a tal:condition="event/venue" tal:attributes="href event/venue/to_object/absolute_url"
							tal:content="event/venue/to_object/title" />
						<time class="eventBegin" tal:condition="python: not(event.no_starttime)"
							tal:attributes="datetime python:event.start.isoformat()"
							tal:content="python:event.start.strftime('%H:%M')" />
						<tal:if condition="python: event.end and not(event.no_endtime)">
							<span>-</span>
							<time class="eventEnd" tal:attributes="datetime python:event.end.isoformat()"
								tal:content="python:event.end.strftime('%H:%M')" />
						</tal:if>
						<span tal:condition="python: not(event.no_starttime)"> Uhr</span>
					</div>
				</header>
				<section class="event-description hideable"
					tal:define="desc python: unicode(event.description)"
					tal:content="structure python: desc[:500] + (desc[500:] and '<a title=\'Weiterlesen\' href=\'' + event.absolute_url() + '\'>[...]</a>')" />
			</article>
		</li>
	</ul>
</section>
