<section id="venuefolder-section" i18n:domain="wasgehtengine.contenttypes">
	<header>
		<h1>Locations in Bonn</h1>
	</header>
	
	<!-- TODO: remove the redundancy -->
	<div id="venueList" tal:define="venues python:view.venues()">
		<form action=".">
	    	<input type="checkbox" name="venue_type" value="nightclub" tal:attributes="checked python: 'checked' if 'nightclub' in venues else ''" />Nachtclubs
	   		<input type="checkbox" name="venue_type" value="bar" tal:attributes="checked python: 'checked' if 'bar' in venues else ''" />Bars
	   		<input type="checkbox" name="venue_type" value="pub" tal:attributes="checked python: 'checked' if 'pub' in venues else ''" />Kneipen
	   		<input type="checkbox" name="venue_type" value="biergarten" tal:attributes="checked python: 'checked' if 'biergarten' in venues else ''" />Biergärten
	   		<input type="checkbox" name="venue_type" value="arts_centre" tal:attributes="checked python: 'checked' if 'arts_centre' in venues else ''" />Kunstzentren
	   		<input type="checkbox" name="venue_type" value="cinema" tal:attributes="checked python: 'checked' if 'cinema' in venues else ''" />Kinos
	   		<input type="checkbox" name="venue_type" value="theatre" tal:attributes="checked python: 'checked' if 'theatre' in venues else ''" />Theater
	   		<input type="checkbox" name="venue_type" value="cafe" tal:attributes="checked python: 'checked' if 'cafe' in venues else ''" />Cafés
	   		<input type="checkbox" name="venue_type" value="restaurant" tal:attributes="checked python: 'checked' if 'restaurant' in venues else ''" />Restaurants
	   		<input type="checkbox" name="venue_type" value="kiosk" tal:attributes="checked python: 'checked' if 'kiosk' in venues else ''" />Kioske
	   		<input type="checkbox" name="venue_type" value="museum" tal:attributes="checked python: 'checked' if 'museum' in venues else ''" />Museen
	   		<input type="submit" value="Filtern" />
		</form>
		<section id="nightclub-section" tal:condition="python:'nightclub' in venues">
			<h2>Nachtclubs</h2>
			<ul>
				<li tal:repeat="venue python:venues['nightclub']">
					<a tal:attributes="href venue/absolute_url" tal:content="venue/title" />
				</li>
			</ul>
		</section>
