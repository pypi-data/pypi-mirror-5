<?xml version="1.0"?>
<rolemap>
	<permissions>
		<!-- Map the "add" permissions for the various content types. Note that 
			we let the "Contributor" role (in a folder) be allowed to add content when 
			the "Owner" is, so that we can effectively delegate control over a folder. 
			Some content types, such as venue folders and event folders are considered 
			to be so "structural" that only administrators can add them. -->
		<permission name="Wasgehtengine: Add Venue" acquire="False">
			<role name="Manager" />
			<role name="Site Administrator" />
			<role name="Owner" />
			<role name="Contributor" />
		</permission>
		<permission name="Wasgehtengine: Add Event" acquire="False">
			<role name="Manager" />
			<role name="Site Administrator" />
			<role name="Owner" />
			<role name="Contributor" />
		</permission>
		<permission name="Wasgehtengine: Add Venue Folder" acquire="False">
			<role name="Manager" />
			<role name="Site Administrator" />
			<role name="Owner" />
			<role name="Contributor" />
		</permission>
		<permission name="Wasgehtengine: Add Event Folder" acquire="False">
			<role name="Manager" />
			<role name="Site Administrator" />
			<role name="Owner" />
			<role name="Contributor" />
		</permission>
		<permission name="Wasgehtengine: Import" acquire="False">
			<role name="Manager" />
			<role name="Site Administrator" />
		</permission>
	</permissions>
</rolemap>
