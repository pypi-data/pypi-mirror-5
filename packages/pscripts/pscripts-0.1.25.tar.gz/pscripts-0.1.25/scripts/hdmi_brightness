#!/usr/bin/env python

import argparse, pdb, sys
import pscripts.hdmi_control as hdmi 

# pdb.set_trace()
parser = argparse.ArgumentParser(
    description='Control brightness on HDMI')
parser.add_argument('--increase','-i', help='Increase brightness')
parser.add_argument('--decrease','-d', help='Decrease brightness')
a = parser.parse_args() 

if ((a.increase == None and a.decrease == None) or 
    (a.increase != None and a.decrease != None)):
    parser.print_help()
    sys.exit(0)

if a.increase != None:
    hdmi.increase_brightness()
    sys.exit(0)

if a.decrease != None:
    hdmi.decrease_brightness()
    sys.exit(0)
