<tal:block i18n:domain="mediasearch">

    <metal:block metal:define-macro="breadcrumb">
        <ul class="breadcrumb">
            <li tal:repeat="brain python:context.getAdapter('aqparents')(reverse=True)">
                <a tal:attributes="href string:${brain/getURL}"
                   tal:content="brain/Title"/>
                <span class="divider"
                      tal:condition="not:repeat/brain/end">/</span>
            </li>
        </ul>
    </metal:block>

    <p class="documentDescription"
         tal:condition="context/Description"
         tal:content="context/Description"/>

    <table class="table table-bordered" width="100%">
    <thead>
        <th width="50%"
            i18n:translate="">
            Image
        </th>
        <th width="50%"
            i18n:translate="">
            Information
        </th>
    </thead>
    <tbody>
        <td>
            <img tal:attributes="src string:${here/absolute_url}/image_mini"/>
        </td>
        <td>
            <metal:block metal:use-macro="here/js_mediasearch_detail_base/macros/main"/>
        </td>
    </tbody>
    </table>
</tal:block>