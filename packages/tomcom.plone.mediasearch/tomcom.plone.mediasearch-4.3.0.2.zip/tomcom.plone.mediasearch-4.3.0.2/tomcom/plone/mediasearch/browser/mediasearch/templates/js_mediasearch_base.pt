<metal:block metal:define-macro="main"
             i18n:domain="mediasearch">
    <div class="well media-listing-item">
        <a title="Information" class="link-overlay btn"
           tal:attributes="href string:${brain/getURL}/js_mediasearch_detail_image"
           i18n:attributes="title">
            <span class="icon-info"/>
        </a>
        <a title="Download" class="btn"
           tal:attributes="href string:${brain/getURL}/download"
           i18n:attributes="title">
            <span class="icon-download"/>
        </a>
        <a title="Edit" class="btn"
           tal:attributes="href string:${brain/getURL}/edit"
           i18n:attributes="title">
            <span class="icon-pencil"/>
        </a>
        <div class="btn-group">
            <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                <span class="icon-caret-down"></span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="link-overlay unlock"
                       tal:attributes="href python:brain.getParent().getURL()+'/js_mediasearch_paste?input_type=move&uid='+brain.UID;
                                       data-uid brain/UID"
                       i18n:translate="">
                        Move
                    </a>
                </li>
                <li>
                    <a class="link-overlay unlock"
                       tal:attributes="href python:brain.getParent().getURL()+'/js_mediasearch_paste?input_type=copy&uid='+brain.UID;
                                       data-uid brain/UID"
                       i18n:translate="">
                        Copy
                    </a>
                </li>
                <li>
                    <a id="plone-contentmenu-actions-delete" class="actionicon-object_buttons-delete delete-overlay unlock"
                       tal:attributes="href string:${brain/getURL}/delete_confirmation;
                                       rel brain/getId;
                                       data-uid brain/UID"
                       i18n:translate="">
                        Delete
                    </a>
                </li>
                <li>
                    <a style="cursor: pointer;"
                       id="plone-contentmenu-actions-delete" class="actionicon-object_buttons-delete rename-overlay unlock"
                       tal:attributes="href string:${brain/getURL}/object_rename;
                                       rel brain/getId;
                                       data-uid brain/UID"
                       i18n:translate=""
                       i18n:domain="plone">
                        Rename
                    </a>
                </li>

            </ul>
        </div>

        <h4 tal:attributes="title string:${brain/Title} - ${brain/Description}">
            <tal:block tal:content="brain/Title | nothing"/>
        </h4>
        <div>
            <metal:block metal:define-slot="preview_image"/>
        </div>
        <div>
            <center tal:content="brain/getContentType"/>
        </div>

        <br/>
    </div>
</metal:block>