<tal:block i18n:domain="mediasearch">

    <metal:block metal:use-macro="context/js_mediasearch_detail_image/macros/breadcrumb"/>

    <p class="documentDescription"
         tal:condition="context/Description"
         tal:content="context/Description"/>

    <table class="table table-bordered" width="100%">
    <thead>
        <th width="50%"
            i18n:translate="">
            Image
        </th>
        <th width="50%"
            i18n:translate="">
            Information
        </th>
    </thead>
    <tbody>
        <td>
            <a class="thumbnail image-overlay"
               tal:condition="python:brain.getContentType.endswith('pdf')"
               tal:attributes="href string:${here/absolute_url}/@@pdfpreview/get?scaling=800x800">
                <img data-src="holder.js/200x200"
                     :condition="python:brain.getContentType.endswith('pdf')"
                     tal:attributes="src string:${here/absolute_url}/@@pdfpreview/get?scaling=200x200"/>
            </a>
        </td>
        <td>
            <metal:block metal:use-macro="here/js_mediasearch_detail_base/macros/main"/>
        </td>
    </tbody>
    </table>
</tal:block>