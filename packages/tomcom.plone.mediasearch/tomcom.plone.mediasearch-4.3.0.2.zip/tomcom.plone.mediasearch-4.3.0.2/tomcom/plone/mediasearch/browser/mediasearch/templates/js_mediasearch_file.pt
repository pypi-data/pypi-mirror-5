<metal:block metal:define-macro="main"
             tal:define="brain nocall:options/brain"
             i18n:domain="mediasearch">
    <metal:block metal:use-macro="here/js_mediasearch_base/macros/main">
        <metal:block metal:fill-slot="preview_image">
            <a class="thumbnail"
               tal:condition="python:brain.getContentType.endswith('pdf')"
               tal:attributes="href string:${brain/getURL}/@@pdfpreview/get?scaling=800x800">
                <img data-src="holder.js/200x200"
                     tal:condition="python:brain.getContentType.endswith('pdf')"
                     tal:attributes="src string:${brain/getURL}/@@pdfpreview/get?scaling=200x200"/>
            </a>
        </metal:block>
    </metal:block>
</metal:block>