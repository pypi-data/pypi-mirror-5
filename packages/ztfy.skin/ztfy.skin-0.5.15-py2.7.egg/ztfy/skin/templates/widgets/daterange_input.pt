<div tal:attributes="class string:daterange ${view/klass}" i18n:domain="ztfy.skin">
	<label tal:attributes="for view/begin_id" i18n:translate="">Between:</label>
	<input type="text" class="date-field"
		   data-ztfy-widget="datetime"
		   data-datetime-showtime="false"
		   tal:attributes="id view/begin_id;
						   name view/begin_name;
						   value view/begin_date;
						   data-datetime-format view/pattern;" />&nbsp;
	<label tal:attributes="for view/end_id" i18n:translate="">and:</label>
	<input type="text" class="date-field"
		   data-ztfy-widget="datetime"
		   data-datetime-showtime="false"
		   tal:attributes="id view/end_id;
						   name view/end_name;
						   value view/end_date;
						   data-datetime-format view/pattern;" />
</div>