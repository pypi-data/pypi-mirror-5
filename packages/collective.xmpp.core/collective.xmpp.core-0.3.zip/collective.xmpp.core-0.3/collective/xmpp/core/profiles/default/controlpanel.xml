<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.xmpp.core"
    purge="False">

    <configlet
        title="XMPP Integration"
        action_id="xmpp"
        appId="collective.xmpp.core"
        category="Plone"
        condition_expr=""
