{% extends "templates/base.jinja" %}
{% block body %}
    <h1>Sources</h1>
    <a href="{{ uri_for('input', id=config_id, path=parent_path) }}">Up</a>
    <h2>Directories</h2>
    <ul>
    {% for dirname, path in directories %}
        <li><a href="{{ uri_for('input', id=config_id, path=path) }}">{{ dirname }}</a></li>
    {% endfor %}
    </ul>
    <h2>Files</h2>
    <ul>
    {% for filename, path in files %}
        <li><a href="{{ uri_for('input', id=config_id, path=path) }}">{{ filename }}</a></li>
    {% endfor %}
    </ul>
{% endblock %}