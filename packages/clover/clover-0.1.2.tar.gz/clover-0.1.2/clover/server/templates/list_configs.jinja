{% extends "templates/base.jinja" %}
{% block body %}
    <h1>Configurations</h1>
    {% for config in configs %}
        {% set config_id = config.read_option(config.options.id) %}
        <h2>{{ config_id  }}</h2>

        <ul style="font-size:24px">
        {# TODO: Display last compilation size #}
        <li>
            <a href="{{ uri_for('test-runner', id=config_id) }}">Run Tests</a>
            <span> | </span>
            <a href="{{ uri_for('list-tests', id=config_id) }}">List Test Files</a>
        </li>
        <li>
            <a href="{{ uri_for('compile', id=config_id) }}">View compilation output</a>
            
            {# TODO: only show if available #}
            <span> | </span>
            <a href="{{ uri_for('sourcemap', id=config_id) }}">View sourcemap</a>
            <span> | </span>
            <a href="{{ uri_for('externs', id=config_id) }}">View externs</a>
        </li>
            
        <li>
            <a href="{{ uri_for('list-sources', id=config_id) }}">List all source files</a>
            <span> | </span>
            <a href="{{ uri_for('input', id=config_id, path=config.basedir) }}">Browse</a>
        </li>
        
        </ul>
        
    {% endfor %}
{% endblock %}