{% filter noblanklines %}
{% if resource.json %}
    $this->{{ resource.phpPropName }} = new {{ api.owner }}_Service_{{ api.className }}_{{ resource.className }}_Resource(
        $this,
        $this->serviceName,
        '{{ resource.codeName }}',
        {% call_template _methods_decl methods=resource.methods %}
    );
{% endif %}

{% for r in resource.resources %}
{% call_template _resource_decl resource=r %}
{% endfor %}
{% endfilter %}
