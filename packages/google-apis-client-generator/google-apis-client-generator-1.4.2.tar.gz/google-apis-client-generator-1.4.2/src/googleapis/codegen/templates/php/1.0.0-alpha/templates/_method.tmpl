/**{% filter block_comment %}
 * {{ method.description }} ({% if resource %}{{ resource.wireName }}.{% endif %}{{ method.wireName }})
 * {% endfilter %}
 *
{% filter noblanklines %}
{% for param in method.required_parameters %}
 * @param {{ param.codeType }} ${{ param.codeName }}
 * {% filter java_comment_fragment:1 %}{{ param.description }}{% endfilter %}{% endfor %}
{% if method.requestType %}
 * @param {{ api.owner }}_{{ method.requestType.className }} $postBody
{% endif %}
 * @param array $optParams Optional parameters.
{% if method.optional_parameters %}
 *{% for param in method.optional_parameters %}
 * @opt_param {{ param.codeType }} {{ param.codeName }}
 * {% filter java_comment_fragment:1 %}{{ param.description }}{% endfilter %}{% endfor %}
{% endif %}
{% if method.response %}
 * @return {{ api.owner }}_Service_{{ api.className }}_{{ method.responseType.className }}
{% endif %}
 */
{% endfilter %}
public function {{ method.name }}({% call_template _func_params method=method %})
{
{% filter noblanklines %}
  $params = array({% parameter_list %}
    {% for p in method.requiredParameters %}
      {% parameter %}'{{ p.wireName }}' => ${{ p.codeName }}{% end_parameter %}
    {% endfor %}
    {% if method.requestType %}
      {% parameter %}'postBody' => $postBody{% end_parameter %}
    {% endif %}
  {% end_parameter_list %});
  $params = array_merge($params, $optParams);
{% if method.response %}
  return $this->{% if baseMethod %}base_methods->{% endif %}call('{{ method.wireName }}', array($params), "{{ api.owner }}_Service_{{ api.className }}_{{ method.responseType.className }}");
{% else %}
  return $this->call('{{ method.wireName }}', array($params));
{% endif %}
{% endfilter %}
}
