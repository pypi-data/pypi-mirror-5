filetype:
  fasta:
    template: fasta
    extensions:
      - fa
      - fasta
      - fna
      - faa
  fastq:
    template: fastq
    extensions:
      - fq
      - fastq
  bam:
    template: bam
    extensions:
      - bam
  sam:
    template: sam
    extensions:
      - sam
  vcf:
    template: vcf
    extensions:
      - vcf
  bcf:
    template: bcf
    extensions:
      - bcf
  bowtiedb:
    template: bowtiedb
    extensions:
      - bt2
      - ebwt
  bz2:
    template: bz2
    extensions:
      - bz2
    continue: true
  gz:
    template: gz
    extensions:
      - gz
    continue: true
template:
  fasta:
    filetype: fasta
  fastq:
    filetype: fastq
  bam:
    filetype: bam
  sam:
    filetype: sam
  vcf:
    filetype: vcf
  bcf:
    filetype: bcf
  bowtiedb:
    filetype: bowtiedb
    category: db
  bzip2:
    compression: bz2
  gz:
    compression: gz
  zip:
    compression: zip
  raw:
    category: raw
    keep: 120
    backup: true
  other:
    category: other
    keep: 12
    backup: false
  intermediate:
    category: intermediate
    keep: 6
    backup: false
  result:
    category: result
    keep: 120
    backup: true
  db:
    category: db
    keep: 60
    backup: false
  trash:
    category: trash
    keep: 2
    backup: false
plugin:
  checksum:
    module: mad2.plugin.checksum
  samplesheet:
    module: mad2.plugin.samplesheet
  onthefly:
    module: mad2.plugin.onthefly
  find:
    module: mad2.plugin.find
  select:
    module: mad2.plugin.select
  table:
    module: mad2.plugin.table
  print:
    module: mad2.plugin.print
  x:
    enabled: false
    module: mad2.plugin.x
  root:
    enabled: true
    module: mad2.plugin.root
  lcbhacks:
    enabled: true
    module: mad2.plugin.lcbhacks
  init:
    module: mad2.plugin.init
  mongo:
    module: mad2.plugin.mongo
    enabled: false
    indici:
      - project
      - userid
      - sha1
      - username
      - host
      - filesize
      - dirname
      - category
      - extension
      - basename
keywords:
  pi:
    description: Principal Investigator
    type: str
  analyst:
    description: Responsible Bioinformatician
    type: str
  xref:
    description: Database cross reference
    type: str
    cardinality: '+'
  project:
    description: Associated project
    type: str
  organism:
    description: Organism
    type: str
  category:
    description: Data Category
    type: restricted
    cardinality: '1'
    allowed:
      raw: Raw data
      intermediate: Intermediate
      result: Result
      db: Database file
      other: Other, important, files
      trash: Can be deleted
  keep:
    description: keep this data for N months after the modification date.
    type: int
  backup:
    description: This data MUST be backed up
    type: boolean
  backup_until:
    description: make sure this is backed up until this date
    type: date
  is_backup_up:
    description: this data has been backup up
    type: boolean
  backup_date:
    description: the date on which this object has been backed up
    type: date
  backup_reference:
    description: reference to retrieve the backed up file
    type: str
    cardinality: '+'


