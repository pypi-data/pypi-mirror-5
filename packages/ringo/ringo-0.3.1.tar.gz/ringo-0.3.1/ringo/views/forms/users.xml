<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="ringo">
  <source>
    <!-- Define different entity types -->
    <entity i18n:attributes="label" id="e1" name="login" label="Login" type="string">
      <rule i18n:attributes="msg"  expr="len($login) ge 2" msg="Login must have a length of greater or equal than 2"></rule>
    </entity>
    <entity i18n:attributes="label" id="e2" name="password" label="Password" type="password">
      <rule i18n:attributes="msg"  expr="$password == $retype_password" msg="Passwords must be equal"></rule>
    </entity>
    <entity i18n:attributes="label" id="e3" name="retype_password" label="Retype Password" type="password"/>
    <entity i18n:attributes="label" id="e4" name="roles" label="Roles"/>
    <entity i18n:attributes="label" id="e5" name="groups" label="Usergroups"/>
    <entity i18n:attributes="label" id="e6" name="default_group" label="Default group"/>
    <entity i18n:attributes="label" id="e7" name="activated" label="Activated"/>
    <entity i18n:attributes="label" id="e8" name="activation_token" label="Activation Token">
      <help i18n:translate="">The activation token can be used to (re)activate a deactivated or new registered user. Please call /auth/activate_user/$token to active the user.</help>
    </entity>
  </source>
  <form id="create" autocomplete="off" method="POST" action="" enctype="multipart/form-data">
    <snippet ref="create_snippet"/>
  </form>
  <form id="update" autocomplete="off" method="POST" action="" enctype="multipart/form-data">
    <snippet ref="update_snippet"/>
  </form>
  <form id="read" readonly="true">
    <snippet ref="update_snippet"/>
  </form>

  <!-- Create-->
  <snippet id="create_snippet">
    <snippet ref="s1"/>
    <snippet ref="s2"/>
    <snippet ref="s3"/>
  </snippet>
  <!-- Create-->
  <snippet id="update_snippet">
    <snippet ref="s1"/>
    <snippet ref="s3"/>
  </snippet>

  <!-- Login -->
  <snippet id="s1">
    <row>
      <col><field ref="e1"/></col>
    </row>
  </snippet>
  <!-- Password -->
  <snippet id="s2">
    <row>
      <col><field ref="e2"/></col>
      <col><field ref="e3"/></col>
    </row>
  </snippet>
  <!-- Roles and Groups etc. -->
  <snippet id="s3">
    <row>
      <col><field ref="e4"/></col>
    </row>
    <row>
      <col><field ref="e5"/></col>
      <col><field ref="e6"/></col>
    </row>
    <row>
      <col><field ref="e7"/></col>
      <col><field ref="e8"/></col>
    </row>
  </snippet>
</configuration>
