<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Corporate Vira">

 <object name="plonetheme_corporatevira_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.corporatevira:skins/plonetheme_corporatevira_custom_images"/>
 <object name="plonetheme_corporatevira_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.corporatevira:skins/plonetheme_corporatevira_custom_templates"/>
 <object name="plonetheme_corporatevira_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.corporatevira:skins/plonetheme_corporatevira_styles"/>

 <skin-path name="Corporate Vira" based-on="Plone Classic Theme">
  <layer name="plonetheme_corporatevira_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_corporatevira_custom_templates"
     insert-after="plonetheme_corporatevira_custom_images"/>
  <layer name="plonetheme_corporatevira_styles"
     insert-after="plonetheme_corporatevira_custom_templates"/>
 </skin-path>

</object>
