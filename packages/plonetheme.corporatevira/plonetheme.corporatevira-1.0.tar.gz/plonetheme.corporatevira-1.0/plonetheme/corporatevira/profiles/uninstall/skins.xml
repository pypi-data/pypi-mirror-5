<?xml version="1.0"?>
<!-- the default skin is set back to the plone default skin -->
   <object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False"
   cookie_persistence="False" default_skin="Corporate Vira"
   request_varname="plone_skin">

        <!-- Remove the Corporate Vira skin layers -->
        <object name="plonetheme_corporatevira_custom_images" meta_type="Filesystem Directory View" remove="True" />
        <object name="plonetheme_corporatevira_styles" meta_type="Filesystem Directory View" remove="True" />
        <object name="plonetheme_corporatevira_custom_templates" meta_type="Filesystem Directory View" remove="True" />

       <!-- Remove the Corporate Vira skin path -->
       <skin-path name="Corporate Vira"  remove="True" />
   </object>

