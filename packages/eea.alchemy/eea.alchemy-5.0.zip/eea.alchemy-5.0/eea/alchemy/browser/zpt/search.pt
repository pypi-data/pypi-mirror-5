<div class="alchemy-search">
  <form action="@@alchemy.update" method="post">
    <fieldset class="alchemy-box">
      <legend>
        <span i18n:translate="">Portal types</span>
        <span class="fieldRequired" 
              i18n:translate="">(Required)</span>
      </legend>
      <div class="alchemy-box-content">
      <ul>
        <tal:types repeat="term python:view.portal_types">
        <li>
          <input type="checkbox" tal:attributes="
            name string:portal_type;
            id python:term.value;
            title python:term.title;
            value python:term.value" />
          <label tal:attributes="
            for python:term.value;
            title python:term.title"
            tal:content="python:term.title" />
        </li>
        </tal:types>
      </ul>
      </div>
    </fieldset>

    <fieldset class="alchemy-box">
      <legend>
        <span i18n:translate="">Look in</span>
        <span class="fieldRequired" 
              i18n:translate="">(Required)</span>
      </legend>
      <div class="alchemy-box-content">
        <ul>
          <tal:schema repeat="term python:view.atschema">
          <li>
            <input type="checkbox" tal:attributes="
              name string:lookin;
              id python:term.value;
              title python:term.title;
              value python:term.value" />
            <label tal:attributes="
              for python:term.value;
              title python:term.title"
              tal:content="python:term.title" />
          </li>
          </tal:schema>
        </ul>
      </div>
    </fieldset>

    <fieldset class="alchemy-box">
      <legend>
       <span i18n:translate="">Discover</span>
       <span class="fieldRequired"
             i18n:translate="">(Required)</span>
      </legend>
      <div class="alchemy-box-content">
        <ul>
          <tal:schema repeat="term python:view.discover">
          <li>
            <input type="checkbox" tal:attributes="
              name string:discover;
              id python:term.value;
              title python:term.title;
              value python:term.value" />
            <label tal:attributes="
              for python:term.value;
              title python:term.title"
              tal:content="python:term.title" />
          </li>
          </tal:schema>
        </ul>
      </div>
    </fieldset>

    <div style="clear: both"> </div>
    <div class="alchemy-button">
      <label for="alchemy-batch" i18n:translate="">Select batch to be process:</label>
      <select name="alchemy-batch" id="alchemy-batch">
        <option value="empty">---</option>
      </select>
      <input type="submit" value="Apply" name="alchemy-apply" id="alchemy-apply" i18n:attributes="value" />
      <input type="submit" value="Preview" name="alchemy-preview" id="alchemy-preview" i18n:attributes="value" />
    </div>
  </form>
</div>
