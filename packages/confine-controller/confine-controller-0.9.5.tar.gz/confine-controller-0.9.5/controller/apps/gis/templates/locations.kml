{% load staticfiles %}
<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://earth.google.com/kml/2.2">
<Document>
    <name>community lab</name>
    <description><![CDATA[CONFINE Nodes recording info.]]></description>
    <Style id="markerStyle">
	    <IconStyle>
		    <Icon>
		        <href>{% static "gis/openlayers/img/marker-wifi.png" %}</href>
	        </Icon>
	    </IconStyle>
    </Style>
  {% for location in locations %}
    <Placemark>
        <name>{{ location.node__name }}</name>
        <description><![CDATA[{{ location.node__description }}]]></description>
        <styleUrl>#markerStyle</styleUrl>
        <Point>
            <coordinates>{{location.lng}},{{location.lat}},0.000000</coordinates>
        </Point> 
    </Placemark>
  {% endfor %}
</Document>
</kml>
