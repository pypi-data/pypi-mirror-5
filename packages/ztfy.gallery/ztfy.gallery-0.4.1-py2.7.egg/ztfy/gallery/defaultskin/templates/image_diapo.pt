<div class="image"
	 tal:attributes="id context/zope:name" i18n:domain="ztfy.gallery">
	<div class="img_wrapper"
		 tal:define="img context/image;
					 disp img/++display++128x128;
					 size disp/getImageSize;
					 padding_left python:int((128-size[0])/2);
					 padding_top python:int((128-size[1])/2);"
		 tal:attributes="style string:padding-top: ${padding_top}px;; padding-left: ${padding_left}px;;">
		<a tal:define="description context/i18n:description;
					   title context/i18n:title;"
		   tal:attributes="href context/@@absolute_url;
						   title title;
						   data-gallery-description description/html:text;" rel="gallery">
			<img class="thumbnail"
				 tal:attributes="id context/image_id;
								 alt title;
								 src disp/@@absolute_url;" />
		</a>
	</div>
	<img class="caddie-sm" src="/--static--/ztfy.gallery.defaultskin/img/caddie-sm.png"
		 tal:condition="request/data:gallery.paypal/paypal_enabled | nothing"
		 tal:attributes="onclick string:$.ZBlog.gallery.buy_image_from_thumbnail('${context/image_id}');" />
</div>
