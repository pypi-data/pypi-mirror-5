<div id="home"
	 tal:define="image view/background_image"
	 i18n:domain="ztfy.gallery">
	<div id="banner"
		 tal:condition="image"
		 tal:attributes="style string:background: transparent url('${image/@@absolute_url}') scroll no-repeat left top;"></div>
	<div id="floats">
		<div id="find">
			<form action="@@search.html" method="post">
				<div>
					<span class="label" i18n:translate="">Find: </span>
					<input type="text" name="search_text" />
					<select name="search_tag:int:ignore_empty" title="Select a tag..." i18n:attributes="title">
						<option class="disabled" value="" i18n:translate="">All tags</option>
						<tal:loop repeat="tuple view/categories">
							<option tal:define="id python:tuple[0];
												category python:tuple[1];"
									tal:attributes="value id">
								:: <tal:var replace="category/i18n:shortname" />
							</option>
						</tal:loop>
					</select>
					<input type="image" src="/--static--/ztfy.gallery/img/find-ok.png" />
				</div>
			</form>
		</div>
		<div id="logo" tal:define="home context/++presentation++; logo home/site_logo;"
					   tal:condition="logo">
			<img tal:attributes="src logo/@@absolute_url" alt="" />
		</div>
		<div id="legend"><span tal:condition="image" tal:content="image/i18n:title"></span></div>
		<div class="clearer"><!-- IE bugfix --></div>
	</div>
	<div id="links">
		<tal:loop repeat="report view/reports">
			<div class="topic_link" tal:define="title report/i18n:title; target report/@@absolute_url;">
				<div class="img_wrapper">
					<a tal:define="image report/i18n:illustration"
					   tal:condition="image"
					   tal:attributes="title report/i18n:title;
									   href target;">
						<img tal:define="display image/++display++w176;"
							 tal:attributes="src display/@@absolute_url;
											 alt report/i18n:illustration_title;" />
					</a>
				</div>
				<a class="text"
				   tal:attributes="title report/i18n:title;
								   href target;"
				   tal:define="shortname report/i18n:shortname;
							   shortname shortname/text:breaks;"
				   tal:content="structure shortname/html:text" />
			</div>
		</tal:loop>
		<div class="other_links">
			<div class="news_link"
				 tal:define="target view/presentation/news_blog"
				 tal:condition="python:(target is not None) and target.visible">
				<div class="title"
					 tal:define="shortname target/i18n:shortname;
								 shortname python:shortname.upper();">
					<a tal:attributes="href target/@@absolute_url">:: <span tal:content="shortname">NEWS</span> ::</a></div>
				<div class="news_scroll"
					 data-ztfy-plugin="$.ZBlog.gallery.skin.initIndexPage">
					<ul class="news">
						<li tal:repeat="topic view/news">
							<span class="title" tal:content="structure python:view.getCategory(topic)" /><br />
							<a tal:attributes="href topic/@@absolute_url"
							   tal:content="topic/i18n:shortname" />
						</li>
					</ul>
				</div>
			</div>
			<div class="seeall_link"
				 tal:define="target view/presentation/reports_blog"
				 tal:condition="python:(target is not None) and target.visible">
				<a tal:attributes="href target/@@absolute_url"
				   title="See all reports" i18n:attributes="title"><img src="/--static--/ztfy.gallery/img/seeall.png" alt="See all reports" i18n:attributes="alt" /></a>
			</div>
		</div>
	</div>
	<div id="footer">
		<div tal:replace="structure provider:footer.manager"></div>
	</div>
</div>