<div class="clearer"><!-- IE bugfix --></div>
<div class="para" i18n:domain="ztfy.gallery"
	 tal:define="pages python:list(view.pages);
				 nb_pages python:len(pages);">
	<h2 tal:define="title context/i18n:title" tal:condition="title" tal:content="title" />
	<p class="heading" tal:define="heading context/i18n:heading" tal:condition="heading" tal:content="structure heading/html:text" />
	<div class="gallery default"
		 data-ztfy-plugin="$.ZBlog.gallery.skin.initScrollable"
		 data-ztfy-widget="fancybox"
		 data-fancybox-selector="DIV.img_wrapper IMG.thumbnail"
		 data-fancybox-parent="A"
		 data-fancybox-show-title="true"
		 data-fancybox-title-position="over"
		 data-fancybox-title-format="$.ZBlog.gallery.fancyboxTitleFormatter"
		 data-fancybox-complete="$.ZBlog.gallery.fancyboxCompleteCallback"
		 tal:attributes="id string:gallery_${context/zope:name};
						 data-paypal-enabled view/paypal/paypal_enabled;">
		<a class="prev browse left disabled"></a>
		<a tal:define="klass python:'next browse right%s' % (nb_pages<2 and ' disabled' or '')"
		   tal:attributes="class klass"></a>
		<div class="scrollable">
			<div class="navi" tal:define="width python:nb_pages * 14;"
							  tal:attributes="style string:width: ${width}px;;"></div>
			<div class="items">
				<tal:loop repeat="page pages">
					<div class="page">
						<tal:loop repeat="image page">
							<div class="image_wrapper">
								<tal:var replace="structure image/@@diapo.html" />
								<div class="toolbox">
									<div class="title" tal:content="image/image_id" />
								</div>
							</div>
						</tal:loop>
					</div>
				</tal:loop>
			</div>
		</div>
	</div>
</div>