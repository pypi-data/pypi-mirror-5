<div class="image"
	 tal:attributes="id context/zope:name;"
	 i18n:domain="ztfy.gallery">
	<div class="img_wrapper"
		 tal:define="img context/image;
					 disp img/++display++128x128;
					 size disp/getImageSize;
					 padding_left python:int((128-size[0])/2);
					 padding_top python:int((128-size[1])/2);"
		 tal:attributes="style string:padding-top: ${padding_top}px;; padding-left: ${padding_left}px;;">
		<a tal:define="target img/++display++w800"
		   tal:attributes="href target/@@absolute_url">
			<img class="thumbnail"
				 tal:attributes="src disp/@@absolute_url;" />
		</a>
	</div>
</div>
