<tal:var tal:define="paypal view/paypal"
		 tal:condition="paypal/paypal_enabled"
		 i18n:domain="ztfy.gallery">
	<h3 i18n:translate="">Buy printed image:</h3>
	<tal:var define="img_paypal context/++paypal++">
		<table tal:condition="img_paypal/paypal_enabled" style="margin: auto;">
			<tr>
				<td>
					<form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
						<input type="hidden" name="cmd" value="_s-xclick" />
						<input type="hidden" name="hosted_button_id" tal:attributes="value paypal/paypal_button_id" />
						<input type="hidden" name="currency_code" tal:attributes="value paypal/paypal_currency" />
						<table style="border-spacing: 3px;">
							<tr>
								<td><input type="hidden" name="on0" value="Format">Format</td>
								<td><select name="os0" tal:define="options paypal/i18n:paypal_format_options">
									<tal:loop repeat="option python:options.split('\n')">
										<option tal:define="args python:option.split('|')"
												tal:attributes="value python:args[0]"
												tal:content="structure python:args[1]" />
									</tal:loop>
								</select></td>
							</tr>
							<tr>
								<td><input type="hidden" name="on1" value="Options" /><span tal:replace="structure paypal/i18n:paypal_options_label" /></td>
								<td><select name="os1" tal:define="options paypal/i18n:paypal_options_options">
									<tal:loop repeat="option python:options.split('\n')">
										<option tal:define="args python:option.split('|')"
												tal:attributes="value python:args[0]"
												tal:content="structure python:args[1]" />
									</tal:loop>
								</select></td>
							</tr>
							<tr>
								<td><input type="hidden" name="on2" tal:attributes="value paypal/paypal_image_field_name" /><span tal:replace="structure paypal/i18n:paypal_image_field_label" /></td>
								<td><input type="hidden" name="os2" tal:attributes="value context/image_id" />&nbsp;&nbsp;<strong tal:content="context/image_id" /></td>
							</tr>
							<tr>
								<td colspan="2" style="padding-top: 10px; vertical-align: top; text-align: right;"
									tal:define="img paypal/i18n:add_to_basket_button"
									tal:condition="img">
									<input type="image" border="0" name="submit" alt="Add to basket"
										   tal:define="size img/getImageSize;
													   width python:size[0];
													   height python:size[1];"
										   tal:attributes="src img/@@absolute_url;
														   style string: width: ${width}px;; height: ${height}px;;"
										   i18n:attributes="alt" />
								</td>
							</tr>
						</table>
					</form>
				</td>
				<td style="vertical-align: bottom;">
					<form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
						<input type="hidden" name="cmd" value="_s-xclick" />
						<input type="hidden" name="encrypted" tal:attributes="value paypal/paypal_pkcs_key" />
						<table style="border-spacing: 3px;">
							<tr>
								<td tal:define="img paypal/i18n:see_basket_button"
									tal:condition="img">
									<input type="image" border="0" name="submit" alt="See basket"
										   tal:define="size img/getImageSize;
													   width python:size[0];
													   height python:size[1];"
										   tal:attributes="src img/@@absolute_url;
														   style string: width: ${width}px;; height: ${height}px;;"
										   i18n:attributes="alt" />
								</td>
							</tr>
						</table>
					</form>
				</td>
			</tr>
		</table>
		<table tal:condition="not:img_paypal/paypal_enabled">
			<tr>
				<td>
					<strong tal:define="message img_paypal/i18n:paypal_disabled_message" tal:content="structure message/html:text" />
				</td>
			</tr>
		</table>
	</tal:var>
	<div class="clearer"><!-- IE bugfix --></div>
</tal:var>