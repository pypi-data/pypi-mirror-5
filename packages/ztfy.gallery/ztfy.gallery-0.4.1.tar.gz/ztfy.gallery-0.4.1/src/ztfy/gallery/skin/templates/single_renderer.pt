<div class="clearer"><!-- IE bugfix --></div>
<div class="para" i18n:domain="ztfy.gallery"
	 tal:define="nb_images python:len(view.gallery.getVisibleImages())">
	<h2 tal:define="title context/i18n:title" tal:condition="title" tal:content="title" />
	<p class="heading" tal:define="heading context/i18n:heading" tal:condition="heading" tal:content="structure heading/html:text" />
	<div class="gallery single"
		 tal:define="presentation context/site:presentation;
					 watermark presentation/site_watermark;"
		 tal:attributes="id string:gallery_${context/zope:name};
						 data-paypal-enabled view/paypal/paypal_enabled;">
		<a class="prev browse left disabled"></a>
		<a tal:define="klass python:'next browse right%s' % (nb_images<2 and ' disabled' or '')"
		   tal:attributes="class klass"></a>
		<div class="scrollable"
			 data-ztfy-plugin="$.ZBlog.gallery.skin.initScrollable"
			 data-gallery-keyboard="true">
			<div class="items">
				<tal:loop repeat="image view/gallery/getVisibleImages">
					<div class="page">
						<div class="img_wrapper"
							 tal:define="display image/image/++display++800x560;">
							<img tal:attributes="src display/@@absolute_url;
												 title image/i18n:title;" alt="" />
							<tal:if condition="watermark">
								<img tal:define="size display/getImageSize;
												 delta_x python:(820 - size[0])/2 + 30;"
									 tal:attributes="src watermark/@@absolute_url;
													 style string:position: absolute;; right: ${delta_x}px;; bottom: 30px;;" />
							</tal:if>
						</div>
						<div class="toolbox">
							<a tal:attributes="href image/@@absolute_url">
								<img class="caddie-sm" src="/--static--/ztfy.gallery.defaultskin/img/caddie-sm.png"
									 tal:condition="request/data:gallery.paypal/paypal_enabled | nothing"
									 tal:attributes="id image/image_id;
													 onclick string:$.ZBlog.gallery.buy_image_from_thumbnail('${image/image_id}');" />
							</a>
							<div class="title" tal:content="image/i18n:title" />
							<div tal:define="desc image/i18n:description" tal:content="desc" tal:omit-tag="not:desc" />
						</div>
					</div>
				</tal:loop>
			</div>
		</div>
	</div>
</div>