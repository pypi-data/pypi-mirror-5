<tal:var define="site context/site:manager;
				 analytics site/google:analytics;"
		 condition="analytics/enabled">
	<script type="text/javascript" 
			tal:define="category view/__parent__/category | nothing;
						category_name category/i18n:title"
			tal:content="structure string:

		var _gaq = _gaq || [];
		var terms = '${request/search_text}';
		var searchTerms = terms.toLowerCase().replace(/\s/g,'+');
		var category = '${category_name}';
		if (category) {
			searchTerms += '&cat=' + category;
		}
		_gaq.push(['_setAccount', '${analytics/website_id}']);
		_gaq.push(['_trackPageview', '${request/URL}?q=' + searchTerms]);

		(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

	"></script>
</tal:var>