<tal:var define="presentation context/skin:presentation;
				 target context/@@absolute_url;
				 shortname context/i18n:title;" i18n:domain="ztfy.gallery">
	<h2><a tal:attributes="href target" tal:content="shortname" /></h2>
	<div tal:define="date presentation/i18n:publication_date"
		 tal:condition="date"
		 tal:content="date" class="publication_date" />
	<div>
		<div class="gallery search default"
			 tal:define="oid view/oid;
						 images view/images;
						 nb_images python:len(images);
						 pages python:list(view.pages);
						 nb_pages python:len(pages);"
			 tal:condition="nb_images"
			 tal:attributes="id string:gallery_${context/zope:name};
							 data-paypal-enabled view/paypal/paypal_enabled;">
			<a tal:attributes="class string:prev_${oid} browse left disabled"></a>
			<a tal:define="klass python:'next_%d browse right%s' % (oid, nb_pages<2 and ' disabled' or '')"
			   tal:attributes="class klass"></a>
			<div class="scrollable"
				 data-ztfy-plugin="$.ZBlog.gallery.skin.initScrollable"
				 tal:attributes="data-gallery-prev string:.prev_${oid};
								 data-gallery-next string:.next_${oid};
								 data-gallery-pages nb_pages;
								 data-gallery-navigator string:navi_${oid};">
				<div class="navi" tal:define="width python:nb_pages * 14;"
								  tal:attributes="class string:navi navi_${oid};
												  style string:width: ${width}px;;"></div>
				<div class="items">
					<tal:loop repeat="page pages">
						<div class="page">
							<tal:loop repeat="image page">
								<div class="image_wrapper">
									<div tal:replace="structure image/@@diapo.html" />
									<div class="toolbox">
										<div class="title" tal:content="image/image_id" />
									</div>
								</div>
							</tal:loop>
						</div>
					</tal:loop>
				</div>
			</div>
			<div class="clearer"><!-- IE bugfix --></div>
		</div>
		<a tal:condition="not:view/images"
		   tal:attributes="href target;
						   title shortname;">
			<tal:if define="illustration context/i18n:illustration"
					condition="illustration">
				<img tal:define="display illustration/++display++w176"
					 tal:attributes="src display/@@absolute_url;
									 alt context/i18n:illustration_title;"
					 class="illustration toleft" />
			</tal:if>
		</a>
		<div class="body" tal:define="heading context/i18n:heading;
									  renderer heading/html:renderer;">
			<a tal:attributes="href target;
							   title shortname;"
			   tal:content="structure python:renderer.render(presentation.header_format,request)" />
		<div class="clearer"><!-- IE bugfix --></div>
		<div class="footer">
			<tal:var replace="structure context/@@tags" />
			<div class="publication">
				<span class="label" i18n:translate="">By </span> <span class="author" tal:content="view/author/title" /> ~ 
				<span class="date" tal:define="date view/date;
											   formatter request/locale/dates;" i18n:translate="">on <tal:var content="python:formatter.getFormatter('date','long').format(date)" i18n:name="date" /> - <tal:var content="python:formatter.getFormatter('time','short').format(date)" i18n:name="time" /></span>
			</div>
		</div>
	</div>
</tal:var>