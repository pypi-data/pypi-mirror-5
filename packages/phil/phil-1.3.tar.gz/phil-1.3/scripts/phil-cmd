"""
This is the command-line side of phil
"""

import sys
import os


try:
    import phil
except ImportError:
    sys.stderr.write(
        'The phil library is not on your sys.path.  Please install phil.\n')
    sys.exit(1)


if __name__ == '__main__':
    sys.exit(phil.main(sys.argv[1:]))
