mixin form_errors(form)
  .row
    .col-md-12
      for name, errors in form.errors | dictsort if form.errors
        for error in errors
          .alert.alert-danger
            strong= form[name].label
            | 
            = error

mixin alerts()
  .row
    .col-md-12
      - with messages = get_flashed_messages(with_categories=true)
        for category, message in messages if messages
          .alert(class='alert-' + category)= message