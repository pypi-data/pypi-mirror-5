<div id="add-blogtype" class="modal hide fade in">
  <div screenid="0" class="modalscreen" style="display: block;">

    <form name="add-blog-type">

    <div class="modal-header">
      <a data-dismiss="modal" class="popup-close">x</a>
      <h3>_("Add New Blog Type");</h3>
    </div>
  
    <div class="modal-body modal-body-min">
        <label>_("Blog type name");</label>
        <input type="text" class="fullwidth-input" value="{Name}" placeholder='_("Enter Blog Type Name");' name="blogtypename">
        <div class="blogtype-content"></div>
        <a name="addnewpost" href="#" class="btn"><i class="icon-plus-sign"></i> _("Create New Predefined Post");</a>
    </div>


    <div class="modal-footer"> 
      <a data-dismiss="modal" class="btn" href="#">_("Cancel");</a> 
      <input type="submit" id="save-add-blogtype" class="btn btn-primary" value="_("Save changes");" />
    </div>

    </form> 
  </div>


  <!--screen 1 -->
  <div screenid="1" class="modalscreen">

    <div class="modal-header"> <a data-dismiss="modal" class="popup-close">x</a>
      <h3>_("Create new Predefined Post");</h3>
    </div>
  
    <div class="modal-body modal-body-min">

      <form>
        <div class="wizard">
          <div class="wizard-line"></div>
          <ul>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
        <legend class="small-legend" style="clear:both;">_("Predefined Post Name");</legend>
        <input type="text" placeholder='_("Enter the Post Name");' class="fullwidth-input" name="post-name">
        <div class="message-error">_("Predefined Post Name can't be empty!");</div>
      </form>

    </div>

    <div class="modal-footer"> 
      <a name="wizard-start" class="btn" href="#">_("Cancel");</a> 
      <a name="wizard-next" class="btn btn-primary" href="#">_("Next");</a> 
    </div>

  </div>


  <!--screen 2 -->
  <div screenid="2" class="modalscreen">

    <div class="modal-header"> <a data-dismiss="modal" class="popup-close">x</a>
      <h3>_("Create new Predefined Post");</h3>
    </div>
  
    <div class="modal-body modal-body-min">

      <form>
        <div class="wizard">
          <div class="wizard-line"></div>
          <ul>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
        <legend class="small-legend" style="clear:both;">_("Predefine the content of the Post");</legend>
        <div class="alert alert-info">
           <a data-dismiss="alert" class="popup-close">x</a>
           <strong>_("Note!");</strong> _("You can optionally place a predifined text in your Predefine Post.");
        </div>
        <textarea class="fullwidth-input" name="post-predefined" placeholder='_("Type your text here");' rows="4"></textarea>

      </form>

    </div>

    <div class="modal-footer"> 
      <a name="wizard-back" class="btn pull-left" href="#">_("Back");</a> 
      <a name="wizard-start" class="btn" href="#">_("Cancel");</a> 
      <a name="wizard-next" class="btn btn-primary" href="#">_("Next");</a> 

    </div>

  </div>





  <!--screen 3 -->
  <div screenid="3" class="modalscreen">

    <div class="modal-header"> <a data-dismiss="modal" class="popup-close">x</a>
      <h3>_("Create new Predefined Post");</h3>
    </div>
  
    <div class="modal-body modal-body-min">

      <form>
        <div class="wizard">
          <div class="wizard-line"></div>
          <ul>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
          </ul>
        </div>
        <legend class="small-legend" style="clear:both;">_("Customize the Font style and color of the Predefined Post"); <i style="color:#989898">(_("optional");)</i></legend>
