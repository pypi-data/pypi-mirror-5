          Configure Post Types
        </legend>
        <label>
          Select Post Types
        </label>
        
        
        
        <div class="blogpost-selection">
          <ul>
            <li posttypeID="1">
              <label class="checkbox">
                <input type="checkbox">
                Normal
              </label>
            </li>
            <li posttypeID="2">
              <label class="checkbox">
                <input type="checkbox">
                Quote
              </label>
            </li>
            <li posttypeID="3">
              <label class="checkbox">
                <input type="checkbox">
                Wrapup
              </label>
            </li>
            <li posttypeID="4">
              <label class="checkbox">
                <input type="checkbox">
                Image post
              </label>
            </li>
            <li posttypeID="5">
              <label class="checkbox">
                <input type="checkbox">
                Goal
              </label>
            </li>
            <li posttypeID="6">
              <label class="checkbox">
                <input type="checkbox">
                Penalty
              </label>
            </li>
            <li posttypeID="7">
              <label class="checkbox">
                <input type="checkbox">
                Yellow Card
              </label>
            </li>
            <li posttypeID="8">
              <label class="checkbox">
                <input type="checkbox">
                Red Card
              </label>
            </li>
            <li posttypeID="9">
              <label class="checkbox">
                <input type="checkbox">
                Extended
              </label>
            </li>
            <li posttypeID="10">
              <label class="checkbox">
                <input type="checkbox">
                Reporting
              </label>
            </li>
            <li posttypeID="11">
              <label class="checkbox">
                <input type="checkbox">
                Slideshow
              </label>
            </li>
            <li posttypeID="12">
              <label class="checkbox">
                <input type="checkbox">
                Surprise
              </label>
            </li>
            <li posttypeID="13">
              <label class="checkbox">
                <input type="checkbox">
                Exclusive
              </label>
            </li>
          </ul>
        </div>
        
        <a class="btn" href="#" name="addnewposttype">
          <i class="icon-plus-sign">
          </i>
          Add New Post Type
        </a>
        
