<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="xhostplus.blog">
<body>
    <div metal:fill-slot="main">

        <tal:main-macro metal:define-macro="main">

            <div tal:replace="structure provider:plone.abovecontenttitle" />

            <div class="blogEntryAuthorPortrait" tal:content="structure context/get_author_portrait" />

            <h1 id="parent-fieldname-title" class="documentFirstHeading kssattr-atfieldname-title kssattr-templateId-kss_generic_macros kssattr-macro-title-field-view"
                tal:content="context/Title">
                Title
            </h1>

            <div tal:replace="structure provider:plone.belowcontenttitle" />

            <div class="visualClear"><!-- clear --></div>

            <div id="parent-fieldname-description" class="documentDescription kssattr-atfieldname-description kssattr-templateId-kss_generic_macros kssattr-macro-description-field-view"
                 tal:content="context/Description|nothing">
               Description
            </div>

            <div class="blogEntryTitleImage"
                 tal:condition="context/title_image_thumb|nothing">
                <a href=""
                   tal:attributes="href string:${context/absolute_url}/title_image/image_view_fullscreen"
                   id="parent-fieldname-image">
                    <img tal:replace="structure python: context.tag(scale='preview', css_class='blogImage')" src="" alt="" />
                </a>
               <div class="blogEntryTitleImageCaption" tal:content="context/title_image_caption|nothing" />
            </div>

            <div tal:replace="structure provider:plone.abovecontentbody" />

            <div id="content-core">
                <div class="kssattr-atfieldname-text kssattr-templateId-widgets/rich kssattr-macro-rich-field-view" id="parent-fieldname-text"
                     tal:content="structure context/text|nothing">
                    Text
                </div>

                <div class="visualClear"><!-- visual clear --></div>
            </div>

            <div tal:replace="structure provider:plone.belowcontentbody" />

        </tal:main-macro>
    </div>
</body>
</html>
