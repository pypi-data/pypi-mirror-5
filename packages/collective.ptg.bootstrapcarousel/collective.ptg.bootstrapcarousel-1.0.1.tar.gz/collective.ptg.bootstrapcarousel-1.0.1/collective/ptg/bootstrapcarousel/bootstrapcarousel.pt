<div id="bootstrapcarousel" class="carousel slide">
    <div class="carousel-inner">
        <tal:images tal:repeat="img view/adapter/cooked_images">
            <div class="item active" tal:condition="repeat/img/start">
                <div class="item-inner">
                    <img title="Locomotives Roundhouse"
                        alt=""
                        src=""
                        tal:attributes="title img/title;
                                        alt img/description;
                                        src img/image_url" /> 
                    <div class="bootstrapcarousel-caption pull-right">
                        <span>
                            <h1 tal:content="img/title"></h1>
                            <h4 style="color:white; font-weight:normal;" tal:content="img/description">
                            </h4>
                        </span>
                    </div>
                </div>
            </div>
            <div class="item" tal:condition="not: repeat/img/start">
                <div class="item-inner">
                    <img title="Locomotives Roundhouse"
                        alt=""
                        src=""
                        tal:attributes="title img/title;
                                        alt img/description;
                                        src img/image_url" /> 
                    <div class="bootstrapcarousel-caption pull-right">
                        <span>
                            <h1 tal:content="img/title"></h1>
                            <h4 style="color:white; font-weight:normal;" tal:content="img/description">
                            </h4>
                        </span>
                    </div>
                </div>
            </div>
        </tal:images>
    </div>
    <a class="carousel-control left" href="#bootstrapcarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#bootstrapcarousel" data-slide="next">&rsaquo;</a>
</div>
