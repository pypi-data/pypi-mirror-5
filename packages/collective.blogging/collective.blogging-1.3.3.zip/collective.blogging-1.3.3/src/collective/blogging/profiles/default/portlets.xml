<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.blogging">
 
    <!-- Portlet type registrations -->
 
    <portlet
        addview="collective.blogging.ManagePortlet"
        title="Manage blog"
        description="A portlet which helps to manage blog's content."
        i18n:attributes="title title_manage_blog_portlet;
                         description description_manage_blog_portlet"
    />
    
    <portlet
        addview="collective.blogging.ArchivePortlet"
        title="Blog archive"
        description="A portlet which displays blog archives."
        i18n:attributes="title title_blog_archive_portlet;
                         description description_blog_archive_portlet"
    />

    <portlet
        addview="collective.blogging.SharePortlet"
        title="Share Entry"
        description="A portlet which displays share links."
        i18n:attributes="title title_blog_share_portlet;
                         description description_share_portlet"
    />

    <portlet
        addview="collective.blogging.FilterPortlet"
        title="Blog filter portlet"
        description="A portlet which displays a filter form."
        i18n:attributes="title; description"
    />
     
</portlets>
