<hc xmlns:bind="bind">
    <bind:list bind="arguments">
        <bind:item>
            <formline text="{Name}">
                <textbox bind="name" />
            </formline>
            <formline text="{Value}">
                <textbox bind="value" />
            </formline>
        </bind:item>
    </bind:list>
</hc>