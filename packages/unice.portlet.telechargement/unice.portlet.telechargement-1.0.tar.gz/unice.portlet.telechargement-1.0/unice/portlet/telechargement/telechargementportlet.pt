<html tal:omit-tag="" 
    xmlns="http://www.w3.org/1.09/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="unice.portlet.telechargement">

    <dl tal:attributes="id view/data/extra_id; class string:portlet portletTelechargement ${view/data/extra_css}">

        <dt tal:condition="not:view/data/omit_header" class="portletHeader">
            <span tal:content="view/header"/>
        </dt>

        <dd class="portletItem">

            <a class="btn btn-primary" tal:attributes="href view/telechargement/absolute_url">
                <i class="icon-chevron-down"></i> <span tal:content="view/header"/>
            </a>

        </dd>

    </dl>

</html>
