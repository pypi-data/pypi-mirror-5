{% load i18n %}
{% load url from future %}
<form id="CF" class="std" action="{% url 'contactme-post-contact-form' %}" method="post">{% csrf_token %}

  {% if form.errors %}
  <div class="alert alert-error"><strong>{% blocktrans count form.errors|length as counter %}Please correct the error below{% plural %}Please correct the errors below{% endblocktrans %}</strong></div>
  {% endif %}

  {% for field in form %}
  {% if field.is_hidden %}
  <div style="display:none">{{ field }}</div>
  {% else %}
  <div {% if field.errors %} class="error"{% endif %}
    {% ifequal field.name "honeypot" %} style="display:none;"{% endifequal %}>
    {% ifequal field.name "message" %}
    {{ field }}
    {% else %}
    {{ field.label_tag }} {{ field }} <span class="help_text">{{ field.help_text }}</span>
    {% endifequal %}
  </div>
  {% if field.errors %}{{ field.errors }}{% endif %}
  {% endif %}
  {% endfor %}

  <p class="hbox box-align-center box-pack-center">
    <input type="submit" id="id_post" name="post" class="btn btn-primary" value="{% trans 'post' %}" />
    <input type="submit" id="id_preview" name="preview" class="btn" value="{% trans 'preview' %}" />
  </p>
</form>
