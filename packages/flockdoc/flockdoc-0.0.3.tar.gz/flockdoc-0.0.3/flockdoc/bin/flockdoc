#!/usr/bin/env python
'''command-line interface for flockdoc

Some things you will probably want:

 - styles for Pygments: `pygmentize -S default -f html > path/to/styles.css`
'''
import argparse

parser = argparse.ArgumentParser(__doc__)
parser.add_argument(
    '-i', '--in',
    dest='in_', metavar='IN', default='site',
    help='process these files (default "site")'
)
parser.add_argument(
    '-o', '--out',
    default='generated',
    help='output processed files here (default "generated")'
)

if __name__ == '__main__':
    args = parser.parse_args()

    from flockdoc.processor import render_all
    render_all(args.in_, args.out)
