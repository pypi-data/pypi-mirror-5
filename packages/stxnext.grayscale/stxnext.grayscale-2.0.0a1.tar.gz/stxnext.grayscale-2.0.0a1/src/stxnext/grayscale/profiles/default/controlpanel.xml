<?xml version="1.0"?>
<object
	name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="stxnext.grayscale"
    purge="False">

    <configlet
    	title="Grayscale settings"
    	action_id="grayscalesettings"
        appId="stxnext.grayscale"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@grayscale_settings"
        icon_expr="string:${portal_url}/++resource++stxnext.grayscale.icon.png"
        visible="True"
        i18n:attributes="title">
        	<permission>Manage portal</permission>
    </configlet>

</object>
