<ul class="sub_sections"
	tal:define="sections view/sections;"
	tal:condition="sections">
	<tal:loop repeat="item sections">
		<li tal:define="section item/section;"
			tal:attributes="class python:item['selected'] and 'selected' or None;">
			<a tal:attributes="href section/@@absolute_url"
			   tal:content="section/i18n:shortname" />
			<tal:if condition="item/subsections">
				<ul class="sub_sections2"
					tal:define="subselected item/subselected">
					<tal:loop repeat="subsection item/subsections">
						<li tal:attributes="class python:subsection in subselected and 'selected' or None;">
							<a tal:attributes="href subsection/@@absolute_url"
							   tal:content="subsection/i18n:shortname" />
						</li>
					</tal:loop>
				</ul>
			</tal:if>
		</li>
	</tal:loop>
</ul>
<div class="banner">
	<img tal:define="image view/banner" tal:condition="image"
		 tal:attributes="src string:${image/@@absolute_url}" alt="" />
</div>