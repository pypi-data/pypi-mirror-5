[buildout]
extends = versions/versions.cfg
parts =
    doc
    test
develop = .
allow-picked-versions = false

[doc]
recipe = zc.recipe.egg
eggs = gocept.package [doc]
       {{egg}}
scripts = doc

[test]
recipe = zc.recipe.egg
scripts =
    zope-testrunner=test
eggs =
    {{egg}} [test]
    zope.testrunner
arguments = ['--test-path', '${buildout:directory}/src']
