<task>
    <run bg_id="1" expect="#icmp_result#" host="1" module="IcmpPing" timeout="30">
        <options>
            <option name="addr" value="{ip(2,testiface)}"/>
            <option name="count" value="40"/>
            <option name="interval" value="0.2"/>
            <option name="limit_rate" value="95"/>
        </options>
    </run>
    <ctl_wait seconds="5"/>
    <intr bg_id="1" host="1"/>
</task>
