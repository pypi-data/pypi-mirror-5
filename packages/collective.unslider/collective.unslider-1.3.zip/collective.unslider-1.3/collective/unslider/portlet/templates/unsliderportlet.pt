<div class="portlet portletUnsliderPortlet"
    tal:attributes="style view/style"
    i18n:domain="collective.unslider">
    <div class="unslider-portlet unslider">
        <ul>
            <li class="unslider-slide"
                tal:repeat="item view/contents"
                tal:attributes="style item/slide_css">
                <div class="unslider-slide-content">
                    <h1><a tal:attributes="href item/url"
                            tal:content="item/title"></a></h1>
                    <p><a tal:attributes="href item/url"
                            tal:content="item/description"></a></p>
                </div>
            </li>
        </ul>
    </div>
</div>
