<div id="authors" class="documentAuthors"
     i18n:domain="eduCommons"
     tal:define="numCreators view/numCreators;
		 creators view/getCreators;">
  <div tal:condition="python: numCreators>1"
       i18n:domain="eduCommons"
       i18n:translate="">
    Authors: <span i18n:name="creators" tal:replace="creators" />
  </div>
  <div tal:condition="python: numCreators==1"
       i18n:domain="eduCommons"
       i18n:translate="">
    Author: <span i18n:name="creators" tal:replace="creators" />
  </div>
</div>
