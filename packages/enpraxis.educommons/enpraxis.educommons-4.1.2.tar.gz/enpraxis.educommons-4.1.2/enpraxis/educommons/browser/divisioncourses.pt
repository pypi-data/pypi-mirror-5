  <table width="100%" 
	 class="division-listing"
	 tal:define="schoolinfo view/getSchoolInfo;
		     courses view/getCourses;">
    <thead>
      <tr>
	<th colspan="2" class="division-title">
	  <a name=""
	     tal:attributes="name context/Title" />
	  <span tal:condition="schoolinfo">
	    <a href=""
	       tal:attributes="href schoolinfo/absolute_url"
	       tal:content="schoolinfo/Title">Division Title</a> |
	  </span> 
	  
	  <a href=""
	     tal:attributes="href context/absolute_url"
	     tal:content="context/Title">Division Title</a>
	</th>
      </tr>
    </thead>
    <tfoot>
    </tfoot>
    <tbody>
      <tal:block tal:condition="courses"
		 tal:repeat="item courses">
	<tr tal:define="oddrow repeat/item/odd;
			item_course python:item[0];
			item_oertypes python:item[1];
			item_fullname item_course/getFullCourseName;"
	    tal:attributes="class python:oddrow and 'course-listing even' or 'course-listing odd'">
	  <td width="75%">
	    <a href=""
	       tal:attributes="href item_course/getURL"
	       tal:content="item_fullname">MATH 101 - Linear Algebra, Fall 2010</a>
	  </td>
	  <td width="25%">
	    <tal:block tal:condition="item_oertypes"
		       tal:repeat="category view/getOerCategories">
	      <tal:block tal:define="otypes python:view.getOerCategory(item_oertypes, category[0])">
		<tal:block tal:condition="otypes"
			   tal:repeat="otype otypes">
		  <a href=""
		     tal:attributes="href otype/getURL;
				     title otype/Title;"><img src="" 
							      tal:attributes="src python:category[1];"/></a>
		</tal:block>
	      </tal:block>
	    </tal:block>
	  </td>
	</tr>
      </tal:block>
      <tr tal:condition="not: courses">
	<td><p class="discreet">No courses have been defined.</p></td>
      </tr>
    </tbody>
  </table>
  <p class="link-top">
    <a href="#top" title="Return to Top">Return to Top</a>
  </p>
