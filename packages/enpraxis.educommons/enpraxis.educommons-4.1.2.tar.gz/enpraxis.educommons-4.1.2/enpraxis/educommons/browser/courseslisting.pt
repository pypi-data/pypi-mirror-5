<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">
<metal:main_macro define-macro="main">
    <metal:body define-macro="body_macro"
                tal:define="kssClassesView context/@@kss_field_decorator_view;
                            getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                            templateId template/getId;
			    schoolsEnabled view/schoolsEnabled;
			    schoolsDescriptor view/getSchoolsDescriptor;
			    divisionsDescriptor view/getDivisionsDescriptor;">

      <a name="top" />

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 tal:content="here/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>

        <div class="documentDescription" tal:content="structure here/Description">
            description
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

	<div id="rss_info">
	  <a href="@@rss_feeds"><img src="rss_icon.gif" /></a>
	  <a href="@@rss_feeds">RSS Feeds</a>
	</div>

        <div metal:define-macro="text-field-view"
             id="parent-fieldname-text" class="stx"
             tal:define="kss_class python:getKssClasses('text',
                         templateId=templateId, macro='text-field-view');
                         text here/getText|nothing"
             tal:condition="text">
            <div metal:define-slot="inside" tal:replace="structure text">The body</div>
        </div>



	<div class="schoolslisting"
	     tal:condition="schoolsEnabled"
	     tal:define="schools view/getSchools;
			 sections python:view.getListings(schools);
			 sections1 python:sections[0];
			 sections2 python:sections[1];">
	  <div class="sectionslisting">
	    <h2 tal:content="schoolsDescriptor">Find Course by Schools</h2>
	    <div>
	      <div class="sectionlistingleft">
		<ul>
		  <li tal:repeat="section sections1">
		    <a href=""
		       tal:attributes="href string:#${section/Title};"
		       tal:content="section/Title">School</a>
		  </li>
		</ul>
	      </div>
	      <div class="sectionlistingright">
		<ul>
		  <li tal:repeat="section sections2">
		    <a href=""
		       tal:attributes="href string:#${section/Title};"
		       tal:content="section/Title">School</a>
		  </li>
		</ul>
	      </div>
	      <div class="sectionlistingfooter">
	      </div>
	    </div>
	  </div>
	  <tal:block tal:repeat="school schools">
	    <div class="sectionslisting"
		 tal:define="divisions python:view.getDivisions(school);
			     sections python:view.getListings(divisions);
			     sections1 python:sections[0];
			     sections2 python:sections[1];">
	      <h2 tal:content="school/Title">School</h2>
	      <div>
		<div class="sectionlistingleft">
		  <ul>
		    <li tal:repeat="section sections1">
		      <a href=""
			 tal:attributes="href string:#${section/Title};"
			 tal:content="section/Title">Division</a>
		    </li>
		  </ul>
		</div>
		<div class="sectionlistingright">
		  <ul>
		    <li tal:repeat="section sections2">
		      <a href=""
			 tal:attributes="href string:#${section/Title};"
			 tal:content="section/Title">Division</a>
		    </li>
		  </ul>
		</div>
		<div class="sectionlistingfooter">
		</div>
	      </div>
	    </div>
	  </tal:block>
	</div>
	  

	<div class="sectionslisting"
	     tal:condition="not: schoolsEnabled"
	     tal:define="divisions python:view.getDivisions();
			 sections python:view.getListings(divisions);
			 sections1 python:sections[0];
			 sections2 python:sections[1];">
	  <h2 tal:content="divisionsDescriptor">Departments</h2>
	  <div>
	    <div class="sectionlistingleft">
	      <ul>
		<li tal:repeat="section sections1">
		  <a href=""
		     tal:attributes="href string:#${section/Title};"
		     tal:content="section/Title">Division</a>
		</li>
	      </ul>
	    </div>
	    <div class="sectionlistingright">
	      <ul>
		<li tal:repeat="section sections2">
		  <a href=""
		     tal:attributes="href string:#${section/Title};"
		     tal:content="section/Title">Division</a>
		</li>
	      </ul>
	    </div>
	    <div class="sectionlistingfooter">
	    </div>
	  </div>
	  </div>
	  
	  
          <metal:listingmacro define-macro="listing">
            <tal:topiccontents define="topicContents python:here.queryCatalog(batch=True);
                                       batch topicContents;">

            <tal:listing condition="topicContents">
            <a style='text-align: right' href="#"
               tal:condition="nocall: here/asPDF|nothing"
               tal:attributes="href string:${here_url}/asPDF/atct_topic_pdf_template/atct_topic_pdf"
               i18n:translate="label_download_as_pdf"
               i18n:domain="atcontenttypes">
                Download PDF
            </a>
            
	    <!-- Start of report entry -->


	    <div tal:repeat="obj topicContents">
	      <div tal:define="robj obj/getObject"
		   tal:replace="structure robj/@@division_courses" />
	    </div>

	    <!-- end of report entry -->

            </tal:listing>

            <p class="discreet"
               tal:condition="python: not topicContents and here.listCriteria()"
               i18n:domain="atcontenttypes"
               i18n:translate="description_no_items_in_topic">
                There are currently no results for this search.
            </p>

            <!-- Navigation -->
            <div metal:use-macro="here/batch_macros/macros/navigation" />

        </tal:topiccontents>
        </metal:listingmacro>
    </metal:body>

    <div tal:replace="structure provider:plone.belowcontentbody" />

</metal:main_macro>

</div>

</body>
</html>
