    <index name="position" meta_type="FieldIndex">
        <indexed_attr value="getPosition"/>
    </index>
    <index name="lastname" meta_type="ZCTextIndex">
        <indexed_attr value="getLastname"/>
        <extra name="index_type" value="Cosine Measure"/>
        <extra name="lexicon_id" value="plaintext_lexicon"/>
    </index>
    <index name="BusinessArea" meta_type="KeywordIndex">
        <indexed_attr value="BusinessArea"/>
    </index>
    <index name="Specialisation" meta_type="KeywordIndex">
        <indexed_attr value="Specialisation"/>
    </index>
    <index name="province" meta_type="KeywordIndex">
        <indexed_attr value="province"/>
    </index>

    <index name="country" meta_type="KeywordIndex">
        <indexed_attr value="country"/>
    </index>
    
    <column value="position"/>
    <column value="lastname"/>
    <column value="BusinessArea"/>
    <column value="Specialisation"/>
    <column value="province"/>
    <column value="country"/>

</object>

