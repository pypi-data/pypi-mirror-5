#!/usr/bin/python
import sys

import bobb.main
import bobb.exceptions

if __name__ == '__main__':
  try:
    bobb.main.import_bobbfile()
  except bobb.exceptions.BobbError as e:
    print(str(e))

  for arg in sys.argv[1:]:
    try:
      bobb.main.build(arg)
    except bobb.exceptions.BobbError as e:
      print(str(e))
