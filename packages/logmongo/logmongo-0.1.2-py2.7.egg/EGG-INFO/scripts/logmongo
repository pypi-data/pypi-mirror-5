#!/home/fox/virtpy/bin/python
import sys
import json
from logmongo import Logmongo 

if __name__ == '__main__':
    # todo flags or config for db/collection/ip/port/size/capped
    log = Logmongo('test')
  
    if len(sys.argv) >= 2:
        if sys.argv[1] == 'tail':
            log.tail()
    else:
        record = json.loads(sys.stdin.read())
        log.write(record)
