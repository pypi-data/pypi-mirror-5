<div class="workflow" tal:define="transitions view/transitions" tal:condition="transitions" i18n:domain="ztfy.workflow">
	<h2 tal:content="view/label" i18n:translate="" />
	<tal:loop repeat="transition transitions">
		<tal:var define="trans_id transition/transition_id;
						 selected python:request['PATH_INFO'].endswith('++wf++'+trans_id) and 'active-menu-item' or '';">
			<a tal:attributes="href python:view.getURL(transition);
							   class string:transition ${selected};" tal:content="transition/title" />
		</tal:var>
	</tal:loop>
</div>