<html tal:omit-tag="" 
    xmlns="http://www.w3.org/1.09/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="unice.portlet.lettre">

    <dl tal:attributes="id view/data/extra_id; class string:portlet portletLettre ${view/data/extra_css}">

        <dt tal:condition="not:view/data/omit_header" class="portletHeader">
            <span tal:content="view/header"/>
        </dt>

        <dd class="portletItem text-center">
            
            <a tal:attributes="href view/lettre/absolute_url; title view/lettre/Description"
                class="enveloppe" data-toggle="tooltip" data-placement="bottom">
                <span><strong><img tal:replace="structure python:view.contentLeadImage()"/></strong></span>
            </a><br/>
            <strong tal:content="view/header"/>

        </dd>

    </dl>

</html>
