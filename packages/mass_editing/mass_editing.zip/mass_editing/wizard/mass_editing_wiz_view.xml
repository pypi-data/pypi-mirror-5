<tryton>
    <data>

        <record model="ir.ui.view" id="view_mass_editing_wiz">
            <field name="model">mass.editing.init</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Mass Editing Wizard">
                    <separator string="Do you want to Create the Mass Editing?"
                        colspan="4" id="test_ask"/>
                    <field name="company_image" widget="image"/>
                    <field name="active_model" invisible="1"/>
                    <field name="active_ids" invisible="1"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.action.wizard" id="act_create_mass_editing_wiz">
            <field name="name">Create Mass Editing Wizard</field>
            <field name="wiz_name">mass.editing.create</field>
            <field name="model">mass.editing</field>
        </record>
        <record model="ir.action.keyword" id="act_create_mass_editing_wizard_keyword">
            <field name="keyword">form_action</field>
            <field name="model">mass.editing,-1</field>
            <field name="action" ref="act_create_mass_editing_wiz"/>
        </record>

    </data>
</tryton>